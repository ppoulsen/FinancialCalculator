@model FinancialCalculator.Models.VcResultsViewModel

@{
    ViewBag.Title = "Venture Capital Solution";
}

<div class="row">
    <div class="span12">
        <h1>@(ViewBag.Title)</h1>
    </div>
</div>
<div class="row">
    <div class="span12">
        <div class="row">
            <div class="span10 offset1">
                <h2>Parameters</h2>
                <table class="table striped">
                    <thead>
                        <tr>
                            <th>Parameter</th>
                            <th>Value</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Starting Shares</td>
                            <td>@(Model.StartingShares.ToString())</td>
                        </tr>
                        <tr>
                            <td>Years To Exit</td>
                            <td>@(Model.YearsToExit.ToString())</td>
                        </tr>
                        <tr>
                            <td>P/E Ratio</td>
                            <td>@(Model.PeRatio.ToString())</td>
                        </tr>
                        <tr>
                            <td>Earnings At Exit</td>
                            <td>@(Model.EarningsAtExit.ToString())</td>
                        </tr>
                    </tbody>
                    <tfoot></tfoot>
                </table>

            </div>
        </div>
        @for (int i = 0; i < Model.Years.Count(); i++)
        {
            <div class="row">
                <div class="span12">
                    <label>Year</label>
                    <p><b>@(Model.Years.ElementAt(i).ToString())</b></p>
                    <label>Invested Funds</label>
                    <p><b>@(Model.InvestedFunds.ElementAt(i).ToString())</b></p>
                    <label>Required ROI</label>
                    <p><b>@(Model.RequiredRois.ElementAt(i).ToString())</b></p>
                    <label>Number Of New Shares</label>
                    <p>@(Model.NumberOfNewShares.ElementAt(i).ToString())</p>
                    <label>Total Shares</label>
                    <p>@(Model.TotalShares.ElementAt(i).ToString())</p>
                    <label>Share Price</label>
                    <p>@(Model.SharePrice.ElementAt(i).ToString())</p>
                    <label>Equity Fraction</label>
                    <p>@(Model.EquityFractions.ElementAt(i).ToString())</p>
                </div>
            </div>
            <div class="row">
                <div class="span12">
                    <hr />
                </div>
            </div>
        }
        <div class="row">
            <div class="span10 offset1">
                <hr />
                <h2>Result</h2>
                <h3>Exit Share Price = @(Model.ExitSharePrice.ToString())</h3>
                <h3>Total Equity Value = @(Model.TotalEquityValue.ToString())</h3>
                <h3>Fractional Equity Value = @(Model.FractionalEquityValue.ToString())</h3>
                <h3>Mgmt. Equity Value = @((1.0 - Model.FractionalEquityValue).ToString())</h3>
            </div>
        </div>
    </div>
</div>
