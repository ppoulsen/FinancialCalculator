@{
    ViewBag.Title = "Financial Calculator";
}
<script type="text/javascript">
    $(function () {
        $('#annuity-tile').click(function () {
            location.href="/Annuity/"
        });
        $('#bond-tile').click(function () {
            location.href="/Bond/"
        });
        $('#pv-tile').click(function () {
            location.href="/PV/"
        });
    });
</script>

<div class="row">
    <div class="span12">
        <h1>@(ViewBag.Title)</h1>
    </div>
</div>
<div class="row bg-gray">
    <div class="span10 offset1">
        <h2 class="fg-white">Functions</h2>
        <div class="row">
            <div class="span12">
                <div id="annuity-tile" class="tile double bg-orange">
                    <div class="tile-content icon">
                        <i class="icon-calculate"></i>
                    </div>
                    <div class="tile-status">
                        <span class="name">Annuity & Amortizing Mortgage</span>
                    </div>
                </div>
                <div id="bond-tile" class="tile double bg-amber">
                    <div class="tile-content icon">
                        <i class="icon-coins"></i>
                    </div>
                    <div class="tile-status">
                        <span class="name">Bond Formula</span>
                    </div>
                </div>
                <div id="pv-tile" class="tile double bg-cyan">
                    <div class="tile-content icon">
                        <i class="icon-dollar"></i>
                    </div>
                    <div class="tile-status">
                        <span class="name">Present Value</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
